@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using MlgStore.WebUI.Areas.Admin.Models
@model ProductIndexViewModel

<h1 align="center">YENİ ÜRÜN EKLEME</h1>

<div class="container">

    <div class="row">

        <div class="col">
             <form>
                <div class="card-body">

                  <div class="form-group">
                    <label>Kategorisi</label>
                    <select id="ddlCategories" class="form-control select2bs4" style="width: 100%;">

                      @foreach (var item in Model.Categories)
                      {
                         <option value="@item.Id">@item.CategoryName</option>
                      }                       

                    </select>
                  </div>
                  <div class="form-group">
                    <label>Tedarikçi</label>
                    <select id="ddlSuppliers" class="form-control select2bs4" style="width: 100%;">

                            @foreach (var item in Model.Suppliers)
                            {
                               <option value="@item.Id">@item.CompanyName</option>
                            }                      

                    </select>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Ürün Adı</label>
                    <input type="text" class="form-control" id="txtProductName" placeholder="Ürün Adı">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Fiyat</label>
                    <input type="text" class="form-control" id="txtUnitPrice" placeholder="Fiyat">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Stok</label>
                    <input type="text" class="form-control" id="txtUnitsInStock" placeholder="Stok">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputFile">Ürün Fotoğrafı</label>
                    <div class="input-group">

                      <div class="custom-file">
                        <input type="file" class="custom-file-input" id="fuProductPhoto">
                        <label class="custom-file-label" for="exampleInputFile">Ürün Resmi Seçiniz</label>
                      </div>

                    </div>
                  </div>
                  <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="chkDiscontinued">
                    <label class="form-check-label" for="exampleCheck1">Discontinued</label>
                  </div>
                </div> 
             </form>

        </div>

    </div>

</div>


