@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="bg0 p-t-104 p-b-116">
	<div class="container">
		<div class="flex-w flex-tr">
			<div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
				<form>
					<h4 class="mtext-105 cl2 txt-center p-b-30">
						Bize Görüşlerinizi Bildirin
					</h4>

					<div class="bor8 m-b-20 how-pos4-parent">
						<input id="txtEmail" class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="email" placeholder="Email Adresinizi Giriniz...">
						<img class="how-pos4 pointer-none" src="/Anonymous/images/icons/icon-email.png" alt="ICON">
					</div>

					<div class="bor8 m-b-30">
						<textarea id="txtDescription" class="stext-111 cl2 plh3 size-120 p-lr-28 p-tb-25" name="msg" placeholder="Kıymetli Görüşlerinizi Buraya Yazınız..."></textarea>
					</div>

					<button id="btnText" type="button" class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
						Gönder
					</button>
				</form>
			</div>

			<div class="size-210 bor10 flex-w flex-col-m p-lr-93 p-tb-30 p-lr-15-lg w-full-md">
				<div class="flex-w w-full p-b-42">
					<span class="fs-18 cl5 txt-center size-211">
						<span class="lnr lnr-map-marker"></span>
					</span>

					<div class="size-212 p-t-2">
						<span class="mtext-110 cl2">
							Adres
						</span>

						<p class="stext-115 cl6 size-213 p-t-18">
							Kızılay Mahallesi GMK Bulvarı Fevzi Çakmak 1 Sok. No: 24 / 5-6-7-8 Kat:2 Kızılay / Ankara
						</p>
					</div>
				</div>

				<div class="flex-w w-full p-b-42">
					<span class="fs-18 cl5 txt-center size-211">
						<span class="lnr lnr-phone-handset"></span>
					</span>

					<div class="size-212 p-t-2">
						<span class="mtext-110 cl2">
							Bizi Arayın
						</span>

						<p class="stext-115 cl1 size-213 p-t-18">
							0312 287 10 00
						</p>
					</div>
				</div>

				<div class="flex-w w-full">
					<span class="fs-18 cl5 txt-center size-211">
						<span class="lnr lnr-envelope"></span>
					</span>

					<div class="size-212 p-t-2">
						<span class="mtext-110 cl2">
							Satış Destek
						</span>

						<p class="stext-115 cl1 size-213 p-t-18">
							iletisim@mlgstore.com
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>



@section styles {
	<link href="~/admin/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
}

@section scripts {

	<script src="~/admin/plugins/sweetalert2/sweetalert2.min.js"></script>


	<script>

		$(Document).ready(function()
		{
			$("#btnText").click(function () {
				var formData = new FormData();

				formData.append("Email", $("#txtEmail").val());
				formData.append("Description", $("#txtDescription").val());

				$.ajax
				({

					url: "https://localhost:44360/Contact/Index",
					method: "post",
					datatype: "json",
					data: formData,
					contentType: false,
					processData: false,
					success: function (response) {
						if (response.isSuccess) {

							Swal.fire
							({
								icon: 'success',
								title: 'İşlem Başarılı',
								html: response.message
							});

							//Swal.fire
							//({
							//	title: 'İşlem Başarılı',
							//	html: response.message,
							//	icon: 'success',
							//	showCancelButton: false,
							//	confirmButtonColor: '#3085d6',
							//	cancelButtonColor: '#d33',
							//	confirmButtonText: 'Tamam'
							//}).then((result) => {
							//	if (result.isConfirmed) {
							//		window.location.reload();
							//	}
							//});
						}
						else 
						{

							Swal.fire
							({
								icon: 'error',
								title: 'İşlem Başarısız',
								html: response.message
							});
						}

					}


				});

			});

		});		
		
		

	</script>


}

